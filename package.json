{
  "name": "@cewald/typescript-boilerplate",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "hello@christianewald.de",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "clean": "rm -rf dist build package",
    "build": "yarn clean && yarn esbuild-browser && yarn esbuild-node",
    "esbuild-browser": "esbuild src/index.ts --bundle --minify --sourcemap=external --outfile=dist/index.js",
    "esbuild-browser:dev": "esbuild src/index.ts --bundle --outfile=dist/index.js",
    "esbuild-browser:watch": "esbuild src/index.ts --bundle --watch --outfile=dist/index.js",
    "esbuild-node": "esbuild src/index.ts --bundle --platform=node --minify --sourcemap=external --outfile=dist/server.js",
    "esbuild-node:dev": "esbuild src/index.ts --bundle --platform=node --sourcemap=external --outfile=dist/server.js",
    "esbuild-node:watch": "esbuild src/index.ts --bundle --platform=node --watch --sourcemap=external --outfile=dist/server.js"
  },
  "devDependencies": {
    "@types/node": "^18.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "esbuild": "^0.14.48",
    "eslint": "^8.19.0",
    "typescript": "^4.7.4"
  }
}
